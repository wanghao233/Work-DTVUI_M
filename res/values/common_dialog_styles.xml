<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 弹出窗口	标题	文字样式 -->
    <style name="CH_Common_Title_Text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!-- 弹出窗口 	信息	文字样式 -->
    <style name="CH_Common_Message_Text">
        <item name="android:textColor">#565656</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 弹出窗口	倒计时	文字样式 -->
    <style name="CH_Common_Time_Text">
        <item name="android:textColor">#565656</item>
        <item name="android:textSize">30sp</item>
    </style>
    <!-- 通用信息弹出窗口	样式 -->
    <style name="CH_Common_Toast">
        <item name="android:background">@drawable/common_info_bg</item>
    </style>
    <!-- 确定、取消弹出窗口	主题 -->
    <style name="MTK_Dialog_bg" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/mtk_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 确定、取消弹出窗口	样式 -->
    <style name="CH_Common_Dialog">
        <item name="android:background">@drawable/common_action_dialog_bg</item>
    </style>
    <!-- 确定、取消弹出窗口	警示样式 -->
    <style name="CH_Warn_Dialog">
        <item name="android:background">@drawable/waring_info_bg</item>
    </style>
    <!-- 弹出窗口	按钮样式 -->
    <style name="CH_Common_Button">
        <item name="android:textColor">@drawable/common_dialog_button_text_style</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/common_dialog_button_style</item>
    </style>
    <!-- 弹出窗口	搜索警示样式 -->
    <style name="Theme.ScanWarnDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/mtk_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 弹出窗口	点击样式 -->
    <style name="CH_Click_Dialog" parent="android:style/Theme.Dialog">
        <!-- 自己想要的背景 @drawable/more_program_infor_blog			@android:color/transparent-->
        <item name="android:windowBackground">@drawable/epg_prompt_bg</item><!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowNoTitle">true</item><!-- 是否有标题 -->
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:backgroundDimEnabled">false</item><!-- 是否模糊 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
    </style>
</resources>