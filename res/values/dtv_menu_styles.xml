<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme" parent="android:Theme">
</style>
		<style name="Theme.ToastDialog" parent="android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>
	<style name="Theme.MenuDialog" parent="android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@drawable/tv_background</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>
	<style name="Theme.DialogFactory" parent="android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@drawable/translucent_background</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>
	<style name="Theme.ScanDialog" parent="android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFrame">@null</item>
		 <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
		<item name="android:windowBackground">@drawable/tv_background</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>
	<style name="Theme.ActivityDialog" parent="android:style/Theme.Dialog">
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>
	<style name="listitem_normal_tv">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:focusable">false</item>
		<item name="android:clickable">false</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">20sp</item>
	<!-- 	<item name="android:background">@color/red</item> -->
	
</style>
	 <style name="Theme.AnimationDialog">
	     <!--
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
	      -->
    </style>
    
<style name="Theme.ActivityTranslucent">
		<item name="android:windowBackground">@color/translucent_black</item>
		<item name="android:windowIsTranslucent">false</item>
    	<item name="android:windowAnimationStyle">@style/Theme.AnimationDialog</item>
    	<item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
	</style>
	
<style name="Theme.ActivityTransparent">
		<item name="android:windowBackground">@color/transparent</item>
		<item name="android:windowIsTranslucent">false</item>
    	<item name="android:windowAnimationStyle">@style/Theme.AnimationDialog</item>
    	<item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
	</style>
	
<style name="quick_channel_curplay_progress_style"  parent="@android:style/Widget.ProgressBar.Horizontal">
        
<item name="android:progressDrawable">@drawable/quick_channel_curplay_progress_drawable</item>
    </style>
    
<style name="dtv_scan_progress_style">
         <item name="android:indeterminateOnly">false</item>
         <item name="android:maxHeight">15dip</item>
         <item name="android:minHeight">15dip</item>
         <item name="android:progressDrawable">@drawable/dtv_scan_progress_drawable</item>
    </style>
</resources>
