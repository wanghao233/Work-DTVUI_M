<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CH_Common_Dialog"
    android:layout_width="600dip"
    android:layout_height="280dip"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="20dip"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/commonaction_dialog_title"
            style="@style/CH_Common_Title_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center|top"
            android:singleLine="true"
            android:text="@string/stringTitle" />
        <TextView
            android:id="@+id/commonaction_dialog_title_2"
            style="@style/CH_Common_Message_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center|top"
            android:singleLine="true"
            android:text="@string/stringTitle2" />
        <TextView
            android:id="@+id/commonaction_dialog_hintmessage"
            style="@style/CH_Common_Message_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="@string/stringMessage" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="20dip"
        android:gravity="center" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:gravity="center"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/commonaction_dialog_btn_ok"
                style="@style/CH_Common_Button"
                android:layout_width="136dip"
                android:layout_height="48dip"
                android:layout_marginRight="20dip"
                android:gravity="center"
                android:nextFocusLeft="@+id/commonaction_dialog_btn_cancel"
                android:singleLine="true"
                android:text="@string/stringOk" />
            <Button
                android:id="@+id/commonaction_dialog_btn_cancel"
                style="@style/CH_Common_Button"
                android:layout_width="136dip"
                android:layout_height="48dip"
                android:layout_marginLeft="20dip"
                android:gravity="center"
                android:nextFocusRight="@+id/commonaction_dialog_btn_ok"
                android:singleLine="true"
                android:text="@string/stringCancel" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>