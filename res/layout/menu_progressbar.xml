<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height ="wrap_content"
>
<LinearLayout android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="wrap_content">
    <LinearLayout android:paddingRight="8dip" android:paddingLeft="8dip" android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/linearLayout2" android:layout_height="62dip" android:layout_width="wrap_content">
        <LinearLayout android:layout_height="wrap_content" android:gravity="center_vertical" android:id="@+id/linearLayout3" style="@style/item_bg_layout" android:layout_width="230dip">
            <RelativeLayout android:layout_height="wrap_content" android:id="@+id/ItemImageBg" android:layout_width="65dip" android:gravity="left|center_vertical">
                <RelativeLayout android:layout_height="wrap_content" android:id="@+id/ItemImage" android:layout_width="wrap_content"></RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="left|center_vertical" android:id="@+id/ItemNameBg">
                <TextView android:layout_height="wrap_content" android:textSize="20dip" android:text="TextView" android:id="@+id/ItemName" android:layout_width="wrap_content"></TextView>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:paddingRight="1dip" android:layout_height="22dip" android:background="@drawable/menu_second_progress" android:id="@+id/barBg" android:paddingLeft="1dip" android:gravity="center_vertical" android:layout_width="158dip">
            <RelativeLayout android:id="@+id/bar" android:background="@drawable/menu_first_progress" android:layout_height="18dip" android:layout_width="50dip"></RelativeLayout>
        </LinearLayout>
        <TextView android:text="TextView" android:layout_height="wrap_content" android:id="@+id/progressValue" android:textSize="20dip" android:layout_width="wrap_content"></TextView>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
