<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/vch_common_toast_layout"
        style="@style/CH_Common_Toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >
        <ImageView
            android:id="@+id/vch_common_toast_hinticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vch_common_toast_hintmessage"
            style="@style/CH_Common_Message_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="@string/stringMessage"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />
    </LinearLayout>
</FrameLayout>