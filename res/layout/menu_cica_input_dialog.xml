<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="176dip"
    android:background="@drawable/dtv_cica_menu_bg1"
    android:orientation="vertical"
    android:paddingBottom="4dip"
    android:paddingLeft="4dip"
    android:paddingRight="4dip"
    android:paddingTop="4dip" 
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/dtv_main_tittle"
        android:layout_width="wrap_content"
        android:layout_height="29dip"
        android:layout_gravity="center_horizontal"
        android:text="@string/noText"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dtv_edit_info"
            android:layout_width="wrap_content"
            android:layout_height="22dip"
            android:layout_marginLeft="20dip"
            android:text="@string/noText" />

        <TextView
            android:id="@+id/dtv_main_sub_tittle"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_gravity="center_horizontal"
            android:text="@string/noText"
            android:textSize="20sp" />
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/editboxinfo"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    </LinearLayout>

    <TextView
        android:id="@+id/dtv_edit_help_info"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_marginLeft="20dip"
        android:text="@string/noText" 
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dip">

            <Button
                android:id="@+id/dtv_ok_button"
                android:layout_width="90dip"
                android:layout_height="wrap_content"
                android:background="@drawable/dtv_cica_mail_selector"
                android:gravity="center"
                android:text="@string/dtv_cica_input_ok"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
             android:layout_marginLeft="20dip">

            <Button
                android:id="@+id/dtv_no_button"
                android:layout_width="90dip"
                android:layout_height="wrap_content"
                android:background="@drawable/dtv_cica_mail_selector"
                android:gravity="center"
                android:nextFocusLeft="@id/dtv_ok_button"
                android:text="@string/dtv_cica_input_cancle"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dtv_main_help_info"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_marginLeft="20dip"
        android:text="@string/noText"
        android:textSize="20dip" />

</LinearLayout>