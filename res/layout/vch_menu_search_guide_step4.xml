<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vch_search_guide_step_4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/warning_yes_no_dialog"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/vch_dtv_item_bg"
            android:gravity="center"
            android:text="@string/dtv_search_guide_scan"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />
        <Button
            android:id="@+id/btnYes"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/vch_dtv_item_bg"
            android:text="@string/yes"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />
        <Button
            android:id="@+id/btnNo"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/vch_dtv_item_bg"
            android:text="@string/no"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/progressbar_cancel_dialog"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/vch_dtv_item_bg"
            android:gravity="center"
            android:text="@string/stringNo"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/vch_dtv_item_bg"
            android:weightSum="5" >
            <TextView
                android:id="@+id/Parameter1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/dtv_scan_resultDTV"
                android:textColor="@color/vch_text_content_Color"
                android:textSize="21sp" >
            </TextView>
            <TextView
                android:id="@+id/Parameter2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="2"
                android:ellipsize="end"
                android:paddingLeft="8dip"
                android:singleLine="true"
                android:text="@string/dtv_scan_resultbroadcast"
                android:textColor="@color/vch_text_content_Color"
                android:textSize="21sp" >
            </TextView>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:max="100"
            android:padding="32dip"
            android:progressDrawable="@drawable/vch_seek_back1"
            android:thumb="@drawable/vch_seek_img" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/vch_dtv_item_bg"
            android:text="@string/menu_cancel"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />
    </LinearLayout>
</LinearLayout>