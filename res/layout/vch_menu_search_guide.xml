<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vch_search_guide"
    android:layout_width="480dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/vch_search_guide_title_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/vch_dtv_item_bg"
            android:gravity="center_vertical"
            android:text="@string/str_vch_search_guide_title_1"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />
        <LinearLayout
            android:id="@+id/vch_search_guide_step_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >
            <TextView
                android:id="@+id/vch_cur_signal_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/vch_dtv_item_bg"
                android:gravity="center_vertical"
                android:text="@string/stringNo"
                android:textColor="@color/vch_text_content_Color"
                android:textSize="21sp" />
            <LinearLayout
                android:id="@+id/vch_search_guide_content_1"
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
            <Button
                android:id="@+id/btnStep1Next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/vch_dtv_item_bg"
                android:text="@string/dtv_search_guide_next"
                android:textColor="@color/vch_text_content_Color"
                android:textSize="21sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/vch_search_guide_title_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/vch_dtv_item_bg"
            android:gravity="center_vertical"
            android:text="@string/str_vch_search_guide_title_2"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />
        <LinearLayout
            android:id="@+id/vch_search_guide_step_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >
            <TextView
                android:id="@+id/vch_cur_operater"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/vch_dtv_item_bg"
                android:gravity="center_vertical"
                android:text="@string/stringNo"
                android:textColor="@color/vch_text_content_Color"
                android:textSize="21sp" />
            <LinearLayout
                android:id="@+id/vch_search_guide_content_2"
                android:layout_width="480dp"
                android:layout_height="wrap_content" >
            </LinearLayout>
            <Button
                android:id="@+id/btnStep2Next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/vch_dtv_item_bg"
                android:text="@string/dtv_search_guide_next"
                android:textColor="@color/vch_text_content_Color"
                android:textSize="21sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/vch_search_guide_title_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/vch_dtv_item_bg"
            android:gravity="center_vertical"
            android:text="@string/str_vch_search_guide_title_3"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />
        <LinearLayout
            android:id="@+id/vch_search_guide_step_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/vch_dtv_item_bg"
                android:gravity="center_vertical"
                android:text="@string/dtv_search_guide_reboot"
                android:textColor="@color/vch_text_content_Color"
                android:textSize="21sp" />
            <LinearLayout
                android:id="@+id/vch_search_guide_content_3"
                android:layout_width="480dp"
                android:layout_height="wrap_content" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/vch_search_guide_title_4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/vch_dtv_item_bg"
            android:gravity="center_vertical"
            android:text="@string/str_vch_search_guide_title_4"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />
        <LinearLayout
            android:id="@+id/vch_search_guide_step_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/vch_dtv_item_bg"
                android:gravity="center_vertical"
                android:text="@string/dtv_search_guide_scan"
                android:textColor="@color/vch_text_content_Color"
                android:textSize="21sp" />
            <LinearLayout
                android:id="@+id/vch_search_guide_content_4"
                android:layout_width="480dp"
                android:layout_height="wrap_content" >
            </LinearLayout>
            <Button
                android:id="@+id/btnSure"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/vch_dtv_item_bg"
                android:text="@string/yes"
                android:textColor="@color/vch_text_content_Color"
                android:textSize="21sp" />
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/vch_dtv_item_bg"
                android:text="@string/no"
                android:textColor="@color/vch_text_content_Color"
                android:textSize="21sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>