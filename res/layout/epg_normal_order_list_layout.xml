<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:id="@+id/orderview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:id="@+id/order_title_layout"
            android:layout_width="fill_parent"
            android:layout_height="120dip" >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/menu_shedule_list"
                android:textSize="40sp" />
            <!-- 2015-2-11 YangLiu -->
        </RelativeLayout>
        <com.changhong.tvos.dtv.epg.normal.EpgListView
            android:id="@+id/orderlist"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dip"
            android:layout_marginTop="120dp"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:listSelector="@android:color/transparent" />
        <TextView
            android:id="@+id/notimer"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dip"
            android:paddingLeft="40dip"
            android:text="@string/epg_shedule_null"
            android:textSize="23sp"
            android:visibility="gone" />
    </RelativeLayout>
    <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#10ffffff" />
</RelativeLayout>