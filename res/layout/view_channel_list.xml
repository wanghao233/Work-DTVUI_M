<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/LinearLayout1"
	android:background="@drawable/alpha00">
	<RelativeLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:id="@+id/menu_channel_edit" android:background="@drawable/alpha00">
		<LinearLayout android:orientation="vertical"
			android:layout_width="match_parent" android:layout_alignParentBottom="true"
			android:layout_height="wrap_content" android:id="@+id/linearlayout1">
			<LinearLayout android:layout_width="match_parent"
				android:layout_gravity="top" 
				android:id="@+id/channelBg" android:gravity="center"
				android:layout_height="131dip">
			</LinearLayout>
			<LinearLayout android:layout_width="match_parent"
				android:layout_height="45dip" android:id="@+id/channelListHelp">
				<com.changhong.tvos.system.helpinfo.HelpInfoView
					android:orientation="vertical" android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/chListHelpInfoView">
					</com.changhong.tvos.system.helpinfo.HelpInfoView>
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
