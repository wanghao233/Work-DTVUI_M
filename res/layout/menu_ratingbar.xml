<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height ="wrap_content">
<LinearLayout android:paddingLeft="8dip" android:gravity="center_vertical" android:layout_width="fill_parent" android:orientation="horizontal" android:paddingRight="8dip" android:layout_height="62dip">
        <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:gravity="center_vertical" style="@style/item_bg_layout" android:layout_width="wrap_content">
            <RelativeLayout android:layout_height="wrap_content" android:id="@+id/ItemImageBg" android:layout_width="wrap_content" android:gravity="left|center_vertical">
                <RelativeLayout android:layout_height="wrap_content" android:id="@+id/ItemImage" android:layout_width="wrap_content"></RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ItemNameBg" android:gravity="left|center_vertical">
                <TextView android:layout_height="wrap_content" android:textSize="20dip" android:text="@string/noText" android:layout_width="wrap_content" android:id="@+id/ItemName"></TextView>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout android:paddingRight="1dip" android:layout_height="match_parent" android:id="@+id/barBg" android:paddingLeft="1dip" android:gravity="center_vertical" android:layout_width="wrap_content">
           
            <LinearLayout android:layout_height="wrap_content" android:id="@+id/grayBarBg" android:gravity="center_vertical" android:layout_width="wrap_content">
            </LinearLayout>
            <LinearLayout android:layout_height="wrap_content" android:id="@+id/blueBarBg" android:gravity="center_vertical" android:layout_width="wrap_content">
        	</LinearLayout>
       </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
