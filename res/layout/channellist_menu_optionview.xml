<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="65dip"
    android:focusable="true" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="75dip"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" 
        android:layout_marginLeft="36dp"
        >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/ItemImageLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/LImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_direction_left_new" >
        </ImageView>

        <RelativeLayout
            android:id="@+id/OptionValue"
            android:layout_width="330dip"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="TextView"
                android:textColor="#FF565656"
                android:textSize="26sp" >
            </TextView>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                 >

                <ImageView
                    android:id="@+id/DotL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:gravity="bottom"
                    android:src="@drawable/dot_sel"
                    >
                </ImageView>
	<!-- 
                <ImageView
                    android:id="@+id/DotM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:gravity="bottom"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="30dp"
                    >
                </ImageView>
 -->
                <ImageView
                    android:id="@+id/DotR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                     android:src="@drawable/dot_unsel"
                     android:gravity="bottom"
                     android:layout_marginBottom="10dip"
                     >
                </ImageView>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/RImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_direction_right_new" >
        </ImageView>
    </LinearLayout>

</RelativeLayout>