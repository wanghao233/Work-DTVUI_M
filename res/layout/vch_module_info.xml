<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vch_setting"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/vch_module_info"
        android:layout_width="480dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/vch_operator"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/vch_card_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/vch_card_status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/vch_hardver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/vch_appver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/vch_release_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/vch_dtv_version"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/vch_build_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />
            <!-- android:textColor="@color/vch_text_content_Color"
            android:textSize="21sp"
            android:text="@string/back" -->
        </LinearLayout>

</LinearLayout>