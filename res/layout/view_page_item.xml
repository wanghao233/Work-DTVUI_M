<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/relativeLayout1">
<LinearLayout 
	android:focusable="true" android:orientation="vertical"
	android:id="@+id/pageItemBg"
	android:layout_height="match_parent" android:layout_width="wrap_content">
	<LinearLayout android:layout_width="wrap_content"
		android:id="@+id/blueBarBg" android:orientation="vertical" android:layout_height="wrap_content">
		<RelativeLayout android:layout_gravity="center_horizontal"
			android:layout_alignParentTop="true" android:orientation="vertical"
			android:layout_centerHorizontal="true" android:id="@+id/blueBar"
			android:layout_height="100dip" android:layout_width="2dip" android:background="@drawable/menu_page_scroll_blue">
			<RelativeLayout android:layout_alignParentTop="true"
				android:layout_height="wrap_content" android:layout_marginTop="0dip" android:id="@+id/blue1" android:layout_centerHorizontal="true" android:layout_width="2dip" android:background="@drawable/menu_page_scroll_blue"></RelativeLayout>
			<RelativeLayout
				android:layout_height="wrap_content" android:id="@+id/blue2" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_width="2dip" android:background="@drawable/menu_page_scroll_blue"></RelativeLayout>
		</RelativeLayout>
		<LinearLayout android:orientation="vertical"
			android:background="@drawable/menu_page_scroll_head" android:layout_width="25dip"
			android:layout_gravity="center_horizontal"
			android:layout_alignParentBottom="true" android:id="@+id/pageNum"
			android:layout_height="wrap_content">
			<TextView android:textColor="@color/black" android:textSize="12sp"
				android:singleLine="true"
				android:layout_width="match_parent" android:gravity="center"
				android:text="@string/noText" android:id="@+id/curPageNum" android:layout_height="20dip" android:layout_marginTop="3dip"></TextView>
			<TextView android:textColor="@color/black" android:textSize="12sp"
				android:singleLine="true"
				android:layout_width="match_parent" android:gravity="center"
				android:text="@string/noText" android:id="@+id/pageCount" android:layout_height="20dip"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:background="@drawable/menu_page_scroll_gray" android:layout_width="3dip"
		android:layout_gravity="center_horizontal" android:layout_height="match_parent"
		android:id="@+id/gray"></LinearLayout>



</LinearLayout>
</RelativeLayout>